---
interface Project {
    name: string;
    description: string;
    link: {
        url?: string;
        target?: string;
        title?: string;
        buttonLabel?: string;
    };
};

const projects: Project[] = [{
    name: 'France Travail',
    description: 'Built a custom Database as a Service to fast-track internal innovation.',
    link: {
        url: 'https://france-travail.fr/',
    }
}, {
    name: 'e-santé Occitanie',
    description: 'Full platform redesign for a smoother, smarter user experience.',
    link: {
        url: 'https://www.esante-occitanie.fr/'
    }
}, {
    name: 'FrenchFab',
    description: 'Designed and launched the flagship site for France’s industrial pride.',
    link: {
        url: 'https://lafrench-fab.com/'
    }
}, {
    name: 'ESIEA',
    description: 'Created a new school website to attract future talent and spotlight tech excellence.',
    link: {
        url: 'https://www.esiea.fr/'
    }
}, {
    name: 'HarfangLab',
    description: 'Built a tech blog that speaks to pros — and ranks with SEO in mind.',
    link: {
        url: 'https://harfanglab.io/insidethelab/'
    }
}, {
    name: 'RFI',
    description: 'Developed the ad sales website, balancing business goals and editorial identity.',
    link: {
        url: 'https://www.rfiadvertising.com/'
    }
}
];
---

<div>

    <!-- <h2 class="text-2xl font-bold text-white mb-4">Latest Projects</h2> -->

    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">

        {projects.map(project =>

            <div class="flex flex-col justify-center items-start border border-gray-700 rounded-lg p-4 bg-black">

                <h3 class="text-xl font-semibold text-white mb-2">
                    {project.name}
                </h3>

                <p class="text-gray-400">
                    {project.description}
                </p>

                {
                    project.link?.url ?
                        <a
                            href={project.link.url}
                            title={project.link.title || project.name}
                            target={project.link.target || '_blank'}
                            class="
                                w-full px-4 py-2.5 mt-4 text-center

                                border border-gray-600 rounded-lg

                                hover:text-primary
                                hover:border-primary
                            ">
                            {project.link.buttonLabel || 'Open Project Website'}
                        </a>
                    : null
                }

            </div>

        )}

    </div>

</div>
