---
import { Code } from 'astro:components';

const code = `interface Developer {
    name: Nicolas GADEYNE;
    skills: string[];
    interests: string[];
};

interface TechStack {
    productManager: string[];
    devOps: string[];
    backend: string[];
   frontend: string[];
};

type ContactType = 'github' | 'malt' | 'linkedIn' | 'email';

const techStack: TechStack = {
    productManager: [
        'Product Vision',
        'Roadmap',
        'Prioritize'
        'Communication'
        'Management',
        'Structure',
        'Scrum',
        'SAFe',
        'Lean Six Sigma'
    ],
    devOps: [
        'GitLab',
        'GitHub',
        'Docker',
        'Kubernetes',
    ],
    frontend: [
        'JavaScript',
        'TypeScript',
        'Vue.js',
        'Astro',
        'CSS',
        'TailwindCSS',
        'HTML',
        'Markdown',
        'Figma'
    ],
    backend: [
        'Node.js',
        'Python',
        'Go',
        'PostgreSQL',
        'Redis',
        'Mongo',
        'S3 Storage',
    ]
};

// Developer profile
const me: Developer = {
    name: 'Nicolas GADEYNE',
    skills: [
        ...techStack.productManager,
        ...techStack.devOps,
        ...techStack.backend,
        ...techStack.frontend
    ],
    interests: [
        'Tennis — Competitive mindset, discipline, and resilience',
        'Travel — Adaptability, cultural curiosity, love for exploration',
        'Video games (RPG & strategy) — Analytical thinking, decision-making, challenge-driven',
        'Fantasy novels (The Witcher, Realm of the Elderlings) — Imagination, storytelling, attention to detail',
        'Passionate about music (rock) — Creative sensitivity, artistic exploration',
    ]
};

// Contact function
const contact = (type: ContactType): string => {
    switch (type) {
        case 'github':
            return 'https://github.com/ngadeyne';
        case 'malt':
            return 'https://www.malt.fr/profile/nicolasgadeyne';
        case 'linkedIn':
            return 'https://www.linkedin.com/in/nicolas-gadeyne';
        case 'email':
            return 'contact@nicolas-gadeyne.fr';
        default:
            return 'Send fax.';
    }
};

`;
---

<Code
    code={code}
    lang="js"
    wrap={true}
/>

<style is:global>

    /* Custom styling for code block line numbers */
    pre.astro-code {
        @apply bg-transparent !important;
    }

    pre.astro-code code {
        @apply block;
        counter-reset: step;
        counter-increment: step 0;
    }

    pre.astro-code code .line {
        @apply relative;
    }

    pre.astro-code code .line::before {
        content: counter(step);
        counter-increment: step;
        @apply text-gray-600 pr-2;
    }

</style>